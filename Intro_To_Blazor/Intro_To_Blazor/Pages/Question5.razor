@page "/Question5"

<h1>Calculator</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <div class="container" style="background-color:aqua">
            <div class="form-group">
                <label for="First Number" class="control-label">First Number</label>
                <input for="First Number" placeholder="Enter First Number" class="form-control" @bind="@Num1" />
            </div>
            <div class="form-group">
                <label for="Second Number" class="control-label">Second Number</label>
                <input for="Second Number" placeholder="Enter Second Number" class="form-control" @bind="@Num2" />
            </div>


            <div>
                <p>Operators</p>
                <button style="background-color:chocolate" @onclick="@Addition">Add</button><br />
                <button style="background-color:seagreen" @onclick="@Subtraction">Subtract</button><br />
                <button style="background-color:dimgrey" @onclick="@Multiplication">Multiply</button><br />
                <button style="background-color:goldenrod" @onclick="@Division">Divide</button><br />
            </div>
            <br />
            <div class="form-group">
                <label for="Result" class="control-label">Result</label>
                <input for="Result" class="form-control" @bind="@Result" /><br />
            </div>
        </div>


    </div>
</div>


@functions{
    string Num1;
    string Num2;
    string Result;
    void Addition()
    {
        Result = (Convert.ToDouble(Num1) + Convert.ToDouble(Num2)).ToString();
    }
    void Subtraction()
    {
        Result = (Convert.ToDouble(Num1) - Convert.ToDouble(Num2)).ToString();
    }
    void Multiplication()
    {
        Result = (Convert.ToDouble(Num1) * Convert.ToDouble(Num2)).ToString();
    }
    void Division()
    {
        if (Convert.ToDouble(Num2) != 0)
        {
            Result = (Convert.ToDouble(Num1) / Convert.ToDouble(Num2)).ToString();
        }
        else
        {
            Result = "Cannot Divide by Zero";
        }
    }
}
